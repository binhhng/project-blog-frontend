{
  "compilerOptions": {
    "experimentalDecorators": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components/index"],
      "@configs": ["./src/configs/index"],
      "@pages": ["./src/pages/index"],
      "@tools": ["./src/tools/index"],
      "@utils": ["./src/utils/index"],
      "@assets": ["./src/assets/index"],
      "@components/*": ["./src/components/*"],
      "@configs/*": ["./src/configs/*"],
      "@pages/*": ["./src/pages/*"],
      "@tools/*": ["./src/tools/*"],
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "exclude": [
    "node_modules", "config", "public"
  ],
  "include": [
    "src", "../superReport"
  ]
}
